{
    "workflow_name": "Distance to nearest road",
    "task_statement": "计算每个建筑到最近道路段的直线距离。",
    "arcgis_context": { "workspace": "project.gdb", "coordinate_system": "projected", "linear_unit": "meters", "area_unit": "square_meters" },
    "inputs": [
        { "layer_name": "building", "geometry_type": "polygon", "required_fields": ["building_id"] },
        { "layer_name": "road", "geometry_type": "polyline", "required_fields": ["road_id"] }
    ],
    "steps": [
        {
            "step_id": "S1",
            "tool": "Spatial Join",
            "purpose": "寻找最近道路",
            "parameters": {
                "target_features": "building",
                "join_features": "road",
                "join_operation": "JOIN_ONE_TO_ONE",
                "match_option": "CLOSEST",
                "distance_field_name": "dist_to_road"
            },
            "inputs": [{"source": "input", "layer_name": "building"}, {"source": "input", "layer_name": "road"}],
            "outputs": [{ "name": "building_with_road_dist", "type": "feature_class", "geometry_type": "polygon", "new_fields": ["dist_to_road"], "path_hint": "project.gdb/building_with_road_dist" }],
            "qc_checks": []
        }
    ],
    "outputs": [{ "name": "building_with_road_dist", "type": "feature_class", "geometry_type": "polygon", "fields": ["building_id", "dist_to_road"], "description": "建筑到道路的最近距离" }],
    "assumptions": []
}